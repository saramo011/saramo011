
  <resources xmlns:android="http://schemas.android.com/apk/res/android">

      
       <style name="CustomActionBarTheme"
           parent="@style/Theme.AppCompat.Light.DarkActionBar">
           <item name="vpiTabPageIndicatorStyleMyMusic">@style/CustomTabPageIndicatorMyMusic</item>
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="actionModeBackground">@color/topbar_back</item>

        <!-- Support library compatibility -->
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar"
           parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">#00000000</item>
        

      
    </style>
    
    
    
      
    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
     <style name="StyledIndicators" parent="@android:style/Theme.Holo.Light.NoActionBar">
       
        <item name="vpiTabPageIndicatorStyleMyMusic">@style/CustomTabPageIndicatorMyMusic</item>

    </style>

     <style name="CustomTabPageIndicatorMyMusic" parent="Widget.TabPageIndicator">
        <item name="android:background">#007AAB</item>
        <!-- item name="android:background">#016B6B</item-->
        <!-- item name="android:background">@drawable/custom_tab_indicator_mymusic</item-->
        
        <item name="android:textColor">@drawable/tab_text_color_mymusic</item>
        <item name="android:textSize">11sp</item>
        <item name="android:gravity">center</item>
    </style>
  
    

    <style name="CustomTabPageIndicator.Text" parent="android:TextAppearance.Medium">
        <item name="android:typeface">monospace</item>
    </style>
    
    <!--  Transparent dialog -->
    <style name="TransparentProgressDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
<style name="CustomSpinner" parent="Widget.AppCompat.Spinner">
    <item name="android:background">@drawable/edittextstyle</item>
    <item name="android:drawable">@drawable/dwnbtn</item>
</style>

</resources>