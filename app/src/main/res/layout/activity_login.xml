<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:layout_gravity="center"
    android:gravity="center"
    android:padding="40dp"
    android:paddingBottom="50dp">

    <EditText
        android:id="@+id/editText_username"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/edittextstyle"
        android:ems="10"
        android:hint="@string/emailaddress"
        android:inputType="textEmailAddress"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:singleLine="true"
        android:textColor="@color/edit_text_text"
        android:textColorHint="@color/hint_color" />

    <EditText
        android:id="@+id/EditText_password"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_below="@+id/editText_username"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/edittextstyle"
        android:ems="10"
        android:hint="@string/password"
        android:inputType="textPassword"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:singleLine="true"
        android:textColor="@color/edit_text_text"
        android:textColorHint="@color/hint_color" />

    <Button
        android:id="@+id/but_submit"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_below="@+id/EditText_password"
        android:layout_marginTop="15dp"
        android:background="@color/bgcolor_heading"
        android:text="@string/signin"
        android:textColor="@color/button_title_color" />


    <CheckBox
        android:id="@+id/imageView_remember"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/but_submit"
        android:padding="5dp"
        android:text="@string/rememberme"
        android:textSize="14sp" />

    <TextView

        android:id="@+id/textView_new_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView_remember"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:padding="10dp"
        android:text="@string/newuser"
        android:textColor="@color/bgcolor_heading" />
</RelativeLayout>