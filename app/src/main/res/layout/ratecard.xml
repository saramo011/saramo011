<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/bgcolor"
    android:orientation="vertical">
<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <AutoCompleteTextView
        android:id="@+id/search_autocomplete"
        android:layout_width="0dp"
        android:layout_weight="8"
        android:layout_height="match_parent"
        android:hint="Search Here"
        android:popupBackground="@color/topbar_back"
        android:padding="5dp"
        android:imeOptions="actionNext"
        android:layout_margin="3dp"
        android:background="@drawable/edit_new_style"
        />
    <ImageButton
        android:onClick="search_item"
        android:background="@drawable/button_selector_img"
        android:src="@android:drawable/ic_menu_search"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent" />

</LinearLayout>

    <LinearLayout
        android:id="@+id/lin_gender_buttons"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:orientation="horizontal">

        <Button
            android:paddingLeft="10dp"
            android:drawableLeft="@drawable/male"
            android:id="@+id/button_men"
            android:layout_width="0dp"
            android:gravity="left|center"
            android:drawablePadding="10dp"
            android:layout_height="match_parent"
            android:layout_marginRight="1dp"
            android:layout_weight="1"
            android:background="@color/text_medium_blue"
            android:onClick="men"
            android:text="MEN"
            android:textColor="@color/white" />

        <Button
            android:paddingLeft="10dp"
            android:gravity="left|center"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/female"
            android:id="@+id/button_women"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="0.5dp"
            android:layout_marginRight="0.5dp"
            android:layout_weight="1"
            android:background="@color/btn_bgcolor"
            android:onClick="women"
            android:text="WOMEN"
            android:textColor="@color/white" />

        <Button
            android:paddingLeft="10dp"
            android:drawableLeft="@drawable/general"
            android:gravity="left|center"
            android:drawablePadding="10dp"
            android:id="@+id/button_general"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"
            android:layout_weight="1"
            android:background="@color/btn_bgcolor"
            android:onClick="general"
            android:text="GENERAL"
            android:textColor="@color/white" />
    </LinearLayout>

    <ListView
        android:id="@+id/listView1_men"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="4dp"
        android:dividerHeight="4dp" />

</LinearLayout>
